extends ../layout/admin

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        a(
            href="/propiedades/crear" 
            class="rounded py-2 bg-yellow-300 text-yellow-800 p-4 hover:bg-yellow-400 text-sm font-extrabold text-center uppercase my-5 w-full sm:w-auto inline-block px-10"
        ) 
            | Publicar propiedad


        //- pre= JSON.stringify(propiedades, undefined, 2)

        if propiedades.length
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades 
                        li 
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                                div(class="sm:w-1/4 md:w-1/6") 
                                    img(src=`uploads/${propiedad.imagen}`, alt=`Imagen propiedad ${propiedad.titulo}` class="w-full block")
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3")
                                    a(class="block text-2xl font-bold text-indigo-500 truncat hover:underline" href=`/propiedad/${propiedad.id}`)= propiedad.titulo
                                    p(class="text-sm text-black font-bold")= propiedad.categoria.nombre 
                                    p(class="text-sm text-grey-500 font-bold flex items-center") 
                                        svg(
                                            xmlns="http://www.w3.org/2000/svg" 
                                            fill="none" 
                                            viewBox="0 0 24 24" 
                                            stroke-width="1.5" 
                                            stroke="currentColor" 
                                            class="size-6 mr-1"
                                        )
                                            path(
                                                stroke-linecap="round" 
                                                stroke-linejoin="round" 
                                                d="M14.25 7.756a4.5 4.5 0 1 0 0 8.488M7.5 10.5h5.25m-5.25 3h5.25M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                                            )
                                        = propiedad.precio.nombre

                                div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col lg:flex-row gap-2")
                                    form(action="#") 
                                        input(
                                            type="submit", 
                                            class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer ${propiedad.publicado ? "bg-green-100 text-green-800" : "bg-yellow-300 text-yellow-800"}`
                                            value=`${propiedad.publicado ? 'Publidado' : 'No Publicado'}`
                                        )
                                    a(
                                        href=`/propiedades/editar/${propiedad.id}` 
                                        class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-indigo-100 text-indigo-800 hover:bg-indigo-500 hover:text-indigo-100"

                                    )
                                        | Editar

                                    form(method="POST" action=`propiedades/eliminar/${propiedad.id}`) 
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        input(
                                            type="submit", 
                                            class="w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800 hover:bg-red-500 hover:text-red-100"
                                            value="Eliminar"
                                        )
        else 
            div(class="bg-white shadow rounded-lg py-5")
                p.text-center 
                    | No hay Propiedades
